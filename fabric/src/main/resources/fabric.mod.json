{
    "schemaVersion": 1,
    "id": "ntm",
    "version": "${version}",
    "name": "NTM-Modernized",
    "description": "A port of \"HBM's Nuclear Tech Mod\" for modern versions of Minecraft",
    "authors": [
        "fawnoculus"
    ],
    "contributors": [
        "Elo3000",
        "Random_Player_MC",
        "OrdenEnderman"
    ],
    "contact": {
        "homepage": "https://github.com/fawnoculus/NTM-Fabric",
        "sources": "https://github.com/fawnoculus/NTM-Fabric",
        "issues": "https://github.com/fawnoculus/NTM-Fabric/issues"
    },
    "custom": {
        "modmenu": {
            "links": {
                "modmenu.modrinth": "TODO:Don't_forget_to_add_this_link",
                "modmenu.curseforge": "TODO:Don't_forget_to_add_this_link",
                "modmenu.wiki": "https://nucleartech.wiki/wiki/Main_Page",
                "modmenu.github_releases": "https://github.com/fawnoculus/NTM-Fabric/releases"
            }
        }
    },
    "license": "GPL-3.0",
    "icon": "assets/ntm/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "net.fawnoculus.ntm.fabric.NtmFabric"
        ],
        "client": [
            "net.fawnoculus.ntm.fabric.client.NtmFabricClient"
        ],
        "fabric-datagen": [
            "net.fawnoculus.ntm.fabric.client.NtmDataGenerator"
        ],
        "modmenu": [
            "net.fawnoculus.ntm.fabric.client.compat.NtmModMenuPlugin"
        ],
        "emi": [
            "net.fawnoculus.ntm.fabric.compat.NtmEmiPlugin"
        ],
        "rei_common": [
            "net.fawnoculus.ntm.fabric.compat.NtmReiCommonPlugin"
        ],
        "rei_client": [
            "net.fawnoculus.ntm.fabric.client.compat.NtmReiClientPlugin"
        ]
    },
    "mixins": [
        "ntm.mixins.json",
        {
            "config": "ntm.client.mixins.json",
            "environment": "client"
        }
    ],
    "depends": {
        "fabricloader": ">=${loader_version}",
        "minecraft": "${minecraft_version}",
        "fabric-api": ">=${fabric_api_version}",
        "architectury": ">=${architectury_version}",
        "java": ">=21"
    }
}
